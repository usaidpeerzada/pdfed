{
  "name": "pdfed",
  "version": "1.0.0",
  "description": "Free PDF editor browser extension - edit, sign, and annotate PDFs directly in your browser",
  "type": "module",
  "scripts": {
    "dev": "BROWSER=chrome node scripts/build.js",
    "build": "npm run build:chrome && npm run build:firefox",
    "build:chrome": "BROWSER=chrome node scripts/build.js",
    "build:firefox": "BROWSER=firefox node scripts/build.js",
    "build:edge": "BROWSER=chrome node scripts/build.js && cp -r dist/chrome dist/edge",
    "test": "vitest",
    "test:unit": "vitest run --reporter=verbose",
    "test:e2e": "playwright test",
    "lint": "eslint src --ext .js",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "pdf",
    "editor",
    "browser-extension",
    "annotation",
    "signature"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "vite": "^5.0.0",
    "vite-plugin-static-copy": "^3.1.4",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "fabric": "^5.3.0",
    "pdf-lib": "^1.17.1",
    "pdfjs-dist": "^3.11.174"
  }
}
